// Firebase Storage Security Rules
// Permite leitura e escrita para usuários autenticados
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regras para arquivos de mensagens
    match /mensagens/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para outros arquivos da aplicação
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}